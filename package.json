{
  "name": "nodejs-backend-base",
  "version": "1.0.0",
  "description": "Scalable Node.js backend with TypeScript, Express, and layered architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "env-cmd -f .env.dev nodemon",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "env-cmd -f .env.prod node dist/index.js",
    "start:dev": "env-cmd -f .env.dev node dist/index.js",
    "test": "env-cmd -f .env.test jest",
    "test:all": "env-cmd -f .env.test npm run test && npm run test:e2e",
    "test:unit": "env-cmd -f .env.test jest tests/unit",
    "test:integration": "env-cmd -f .env.test jest tests/integration",
    "test:watch": "env-cmd -f .env.test jest --watch",
    "test:coverage": "env-cmd -f .env.test jest --coverage",
    "test:e2e": "env-cmd -f .env.test jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "check": "npm run lint && npm run build",
    "db:migrate": "ts-node -r tsconfig-paths/register src/database/migrations/index.ts migrate",
    "db:migrate:rollback": "ts-node -r tsconfig-paths/register src/database/migrations/index.ts rollback",
    "db:migrate:status": "ts-node -r tsconfig-paths/register src/database/migrations/index.ts status",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seeds/index.ts run",
    "db:seed:list": "ts-node -r tsconfig-paths/register src/database/seeds/index.ts list",
    "migrate:dev": "env-cmd -f .env.dev npm run db:migrate",
    "migrate:rollback:dev": "env-cmd -f .env.dev npm run db:migrate:rollback",
    "migrate:status:dev": "env-cmd -f .env.dev npm run db:migrate:status",
    "seed:dev": "env-cmd -f .env.dev npm run db:seed",
    "seed:list:dev": "env-cmd -f .env.dev npm run db:seed:list",
    "migrate:prod": "env-cmd -f .env.prod npm run db:migrate",
    "migrate:rollback:prod": "env-cmd -f .env.prod npm run db:migrate:rollback",
    "migrate:status:prod": "env-cmd -f .env.prod npm run db:migrate:status",
    "seed:prod": "env-cmd -f .env.prod npm run db:seed",
    "seed:list:prod": "env-cmd -f .env.prod npm run db:seed:list",
    "script:check_native": "node scripts/native-module-check.js",
    "script:check_sqlite": "node scripts/sqlite-module-check.js"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "is-native-module": "^1.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
